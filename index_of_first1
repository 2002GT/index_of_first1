#include <iostream>

using namespace std;

 int index_of_first1(int n, int arr[], int k){
    
    int res = 0;
    int s = 0;
    int e = 1;
    if(k>arr[e]){
        e = e*2;
    }
    
    while(s>=e){
        int mid = s+e-s/2;
        
        if(arr[mid]==k){
            res = mid;
            e = mid-1;
            
        }
    }
    return res;
}

int main()
{
   int n;
   cin>>n;
   int arr[n];
   for(int i=0; i<n-1; i++){
       cin>>arr[i];
   }
   int k;
   cin>>k;
   cout<<index_of_first1(n , arr , k);

    return 0;
}
